<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- Trang Home -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.nct_lite.ui.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <!-- ✅ Action dẫn sang SearchFragment -->
        <action
            android:id="@+id/action_home_to_search"
            app:destination="@id/navigation_search" />
    </fragment>

    <!-- Trang Search -->
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.nct_lite.ui.fragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <!-- Các trang khác -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.nct_lite.ui.fragment.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.nct_lite.ui.fragment.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>

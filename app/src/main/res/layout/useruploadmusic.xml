<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".`useruploadmusic.kt`"
    android:fontFamily="@font/montserrat_light">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/outline_arrow_back_ios_new_24"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload        "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="18dp" />

    <!-- Image Upload Box -->
    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_button"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvUpload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/add_photo_alternate"
            app:tint="#6C6C6C" />

    </LinearLayout>

    <!-- Song name -->
    <EditText
        android:id="@+id/edtSongName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nhập tên bài hát..."
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="44dp"
        app:layout_constraintTop_toBottomOf="@id/imageContainer"
        android:layout_marginTop="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon -->
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_edit"
        app:tint="#777777"
        app:layout_constraintEnd_toEndOf="@id/edtSongName"
        app:layout_constraintTop_toTopOf="@id/edtSongName"
        app:layout_constraintBottom_toBottomOf="@id/edtSongName"
        android:layout_marginEnd="12dp" />

    <!-- Author name -->
    <EditText
        android:id="@+id/edtAuthor"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nhập tên tác giả..."
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/edtSongName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon -->
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_edit"
        app:tint="#777777"
        app:layout_constraintEnd_toEndOf="@id/edtAuthor"
        app:layout_constraintTop_toTopOf="@id/edtAuthor"
        app:layout_constraintBottom_toBottomOf="@id/edtAuthor"
        android:layout_marginEnd="12dp" />

    <!-- Category -->
    <EditText
        android:id="@+id/edtCategory"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nhập thể loại..."
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/edtAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon -->
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_category"
        app:tint="#777777"
        app:layout_constraintEnd_toEndOf="@id/edtCategory"
        app:layout_constraintTop_toTopOf="@id/edtCategory"
        app:layout_constraintBottom_toBottomOf="@id/edtCategory"
        android:layout_marginEnd="12dp" />

    <!-- MP4 file -->
    <EditText
        android:id="@+id/edtMp4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Nhập file mp4"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/edtCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon -->
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_attach_file"
        app:tint="#777777"
        app:layout_constraintEnd_toEndOf="@id/edtMp4"
        app:layout_constraintTop_toTopOf="@id/edtMp4"
        app:layout_constraintBottom_toBottomOf="@id/edtMp4"
        android:layout_marginEnd="12dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginEnd="50dp"
            android:text="Clear"
            android:background="@drawable/bg_button"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="Upload"
            android:background="@drawable/bg_button"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

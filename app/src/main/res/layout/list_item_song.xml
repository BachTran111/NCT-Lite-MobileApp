<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/tvDateSeparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="---------- 13/11/2025 ----------"
        android:textColor="#9E9E9E"
        android:textSize="12sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#3A3A3A"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivAlbumArt"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#606060"
                    android:src="@drawable/ic_avatar_foreground"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSongTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bắc Bling"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSongGenre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: Pop, --"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSongArtist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hòa Minzy ft. Xuân Hinh, Tuấn Cry"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivReplay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_replay" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#505050" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivReject"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:src="@drawable/ic_reject_x"
                    app:tint="#E53935" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#505050" />

                <ImageView
                    android:id="@+id/ivApprove"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:src="@drawable/ic_approve_check"
                    app:tint="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/placeholder_album" />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playlist_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist_image"
        app:layout_constraintTop_toTopOf="@id/playlist_info"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Tên Playlist / Album" />

    <TextView
        android:id="@+id/playlist_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#B3B3B3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/playlist_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/playlist_name"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        tools:text="Playlist • Tên nghệ sĩ" />

</androidx.constraintlayout.widget.ConstraintLayout>

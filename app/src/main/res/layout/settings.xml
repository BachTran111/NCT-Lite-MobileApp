<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fontFamily="@font/montserrat_light">

    <LinearLayout
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1C1c1c"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/outline_arrow_back_ios_new_24"
            app:iconTint="#E0E0E0"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Settings       "
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1" />

    </LinearLayout>


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_avatar_foreground"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button45"
        android:contentDescription="avatar"/>

    <LinearLayout
        android:id="@+id/Statustext"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="122dp"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintBottom_toTopOf="@id/button45"
        app:layout_constraintEnd_toStartOf="@id/arrow2"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maya"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Viewprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:textColor="#CCCCCC"
            android:fontFamily="@font/montserrat_light"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/arrow2"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@id/Statustext"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button45"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Account"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Statustext"
        tools:layout_editor_absoluteY="137dp"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button46"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Data Saver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="180dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button45"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button37"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="223dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button46"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button38"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Playback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="266dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button37"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button39"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Explict Content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="309dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button38"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button40"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Devices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="352dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button39"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button41"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="395dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button40"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button42"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Social"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="438dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button41"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button43"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Voice Assistant and Apps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="481dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button42"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button44"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Audio Quality"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="524dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button43"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Storage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="567dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button44"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"/>

    <LinearLayout
        android:id="@+id/musicBar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/music_bar_background"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@id/progressBarMusic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ảnh bìa -->
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_foreground" />

        <!-- Tiêu đề + Ca sĩ -->
        <LinearLayout
            android:id="@+id/llTitleArtist"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Troye Sivan"
                android:textColor="#B6CFEA"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Khu điều khiển bên phải -->
        <LinearLayout
            android:id="@+id/controlsContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBluetooth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bluetooth" />

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause"
                android:contentDescription="Pause" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarMusic"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:progress="30"
        android:max="100"
        android:indeterminate="false"
        android:progressDrawable="@drawable/music_progress_drawable"
        app:layout_constraintStart_toEndOf="@id/musicBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@id/button12"/>

    <Button
        android:id="@+id/button12"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingStart="16dp"
        android:textColor="#FFFFFF"
        android:drawableTop="@drawable/baseline_home_24"
        android:drawableTint="#80FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintWidth_percent="0.333"/>

    <Button
        android:id="@+id/button15"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:drawableTop="@drawable/library_music_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
        android:drawableTint="#80FFFFFF"
        android:gravity="center"
        android:paddingStart="16dp"
        android:text="Library"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="275dp"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintWidth_percent="0.333"/>

    <Button
        android:id="@+id/button16"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:drawableTop="@drawable/search_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
        android:drawableTint="#80FFFFFF"
        android:gravity="center"
        android:paddingStart="16dp"
        android:text="Search"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="137dp"
        app:layout_constraintStart_toEndOf="@+id/button12"
        style="@style/FlatButton"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintWidth_percent="0.333"/>



</androidx.constraintlayout.widget.ConstraintLayout>
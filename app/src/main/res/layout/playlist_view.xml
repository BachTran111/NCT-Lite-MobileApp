<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:background="@drawable/bg_blue_black"
    android:fontFamily="@font/montserrat_light">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/outline_arrow_back_ios_new_24"
        app:tint="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <LinearLayout
        android:id="@+id/albumin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <ImageView
            android:id="@+id/albumArt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_foreground"
            android:contentDescription="Album Art"
            android:layout_gravity="center"/>

        <!-- Hàng chứa tên album, nghệ sĩ, icon và nút play -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <!-- Cột chứa tên album và info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/albumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 (Remastered)"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Beatles"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/albumInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Album • 2000"
                    android:textColor="#B3B3B3"
                    android:textSize="14sp" />

                <!-- Hàng chứa 3 icon nhỏ -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_heart"
                        app:tint="#B3B3B3"
                        android:layout_marginEnd="20dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_download"
                        app:tint="#1DB954"
                        android:layout_marginEnd="20dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_more"
                        app:tint="#B3B3B3" />
                </LinearLayout>
            </LinearLayout>

            <!-- Nút Play nằm bên phải -->
            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_play_around"
                android:scaleType="fitCenter"
                app:tint="#1DB954"
                android:background="@null"
                android:contentDescription="Play" />
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/musicBar"
        app:layout_constraintTop_toBottomOf="@+id/albumin4">

        <LinearLayout
            android:id="@+id/songList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvSongTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Love Me Do - Mono / Remastered"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_download"
                            app:tint="#1DB954"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tvArtist1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Beatles"
                            android:textColor="#B3B3B3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_more"
                    app:tint="#B3B3B3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvSongTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Me To You - Mono / Remastered"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_download"
                            app:tint="#1DB954"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tvArtist2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Beatles"
                            android:textColor="#B3B3B3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_more"
                    app:tint="#B3B3B3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvSongTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="She Love you - Mono / Remastered"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_download"
                            app:tint="#1DB954"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tvArtist3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Beatles"
                            android:textColor="#B3B3B3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_more"
                    app:tint="#B3B3B3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvSongTitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I Want To Hold Your Hand - Mono / Remastered"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_download"
                            app:tint="#1DB954"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tvArtist4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Beatles"
                            android:textColor="#B3B3B3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_more"
                    app:tint="#B3B3B3"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/musicBar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/music_bar_background"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@id/progressBarMusic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ảnh bìa -->
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_foreground" />

        <!-- Tiêu đề + Ca sĩ -->
        <LinearLayout
            android:id="@+id/llTitleArtist"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Troye Sivan"
                android:textColor="#B6CFEA"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Khu điều khiển bên phải -->
        <LinearLayout
            android:id="@+id/controlsContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBluetooth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bluetooth" />

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause"
                android:contentDescription="Pause" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarMusic"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:progress="30"
        android:max="100"
        android:indeterminate="false"
        android:progressDrawable="@drawable/music_progress_drawable"
        app:layout_constraintStart_toEndOf="@id/musicBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@id/button12"/>

    <Button
        android:id="@+id/button12"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingStart="16dp"
        android:textColor="#FFFFFF"
        android:drawableTop="@drawable/baseline_home_24"
        android:drawableTint="#80FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintWidth_percent="0.333"/>
    <!--        style="@style/FlatButton"-->

    <Button
        android:id="@+id/button15"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:drawableTop="@drawable/library_music_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
        android:drawableTint="#80FFFFFF"
        android:gravity="center"
        android:paddingStart="16dp"
        android:text="Library"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="275dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintWidth_percent="0.333"/>
    <!--        style="@style/FlatButton"-->


    <Button
        android:id="@+id/button16"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:drawableTop="@drawable/search_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
        android:drawableTint="#80FFFFFF"
        android:gravity="center"
        android:paddingStart="16dp"
        android:text="Search"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="137dp"
        app:layout_constraintStart_toEndOf="@+id/button12"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintWidth_percent="0.333"/>
    <!--        style="@style/FlatButton"-->

</androidx.constraintlayout.widget.ConstraintLayout>
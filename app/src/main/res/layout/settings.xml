<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".`settings.kl`">

    <LinearLayout
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1C1c1c"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/outline_arrow_back_ios_new_24"
            app:iconTint="#E0E0E0"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Settings       "
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1" />

    </LinearLayout>


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_avatar_background"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button45"
        android:contentDescription="avatar"/>

    <LinearLayout
        android:id="@+id/Statustext"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="122dp"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintBottom_toTopOf="@id/button45"
        app:layout_constraintEnd_toStartOf="@id/arrowButton"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maya"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Viewprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:textColor="#CCCCCC"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/arrowButton"
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:src="@drawable/outline_arrow_forward_ios_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#CCCCCC"
        android:contentDescription="Arrow button"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Statustext"
        android:layout_marginStart="175dp"/>


    <Button
        android:id="@+id/button45"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Account"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Statustext"
        tools:layout_editor_absoluteY="137dp"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/button46"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Data Saver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="180dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button45"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/button37"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="223dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button46"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/button38"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Upload Music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="266dp"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/button37"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Admin Panel"
        android:textSize="16sp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#FFFFFF"
        android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
        android:drawableTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/button38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@null"/>

    <LinearLayout
        android:id="@+id/musicBar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/music_bar_background"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@id/progressBarMusic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ảnh bìa -->
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_foreground" />

        <!-- Tiêu đề + Ca sĩ -->
        <LinearLayout
            android:id="@+id/llTitleArtist"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Troye Sivan"
                android:textColor="#B6CFEA"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Khu điều khiển bên phải -->
        <LinearLayout
            android:id="@+id/controlsContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBluetooth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bluetooth" />

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause"
                android:contentDescription="Pause" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarMusic"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:progress="30"
        android:max="100"
        android:indeterminate="false"
        android:progressDrawable="@drawable/music_progress_drawable"
        app:layout_constraintStart_toEndOf="@id/musicBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        tools:ignore="NotSibling" />




</androidx.constraintlayout.widget.ConstraintLayout>
